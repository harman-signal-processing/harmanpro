<div class="container main-container">
  <div class="row">
    <div class="large-8 large-offset-2 columns">
      <% if @brand.logo.present? %>
        <h1><%= image_tag @brand.logo.url(:small), alt: @brand.name %></h1>
      <% else %>
        <h1><%= @brand.name %></h1>
      <% end %>

      <div>
        <%=textilize @brand.description %>
      </div>

      <% if @brand.url.present? %>
        <%= link_to @brand.url, @brand.url, target: "_blank" %>
      <% end %>
    </div>
  </div>
</div>
