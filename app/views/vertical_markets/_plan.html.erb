<div class="container plan-container" data-magellan-destination="plan">
<a name="plan"></a>
  <div class="row">
    <div class="large-8 large-offset-2 columns">

      <% if vertical_market.retail? %>

        <div class="row">
          <div class="large-12 columns">
            <div style="height: 300px; padding-top: 150px;" class="text-center">
              Plan placeholder for retail vertical market
            </div>
          </div>
        </div>

      <% else %>

        <div class="row">
          <div class="large-8 columns">

            <%= cache ["parent-vertical-content", vertical_market.parent, Date.today] do %>
              <% if vertical_market.parent %>
                <h3><%= vertical_market.parent.headline %></h3>
                <div class="description parent">
                  <%= raw vertical_market.parent.description %>
                </div>
              <% end %>
            <% end %>

            <%= cache ["help-find-installer-content", Date.today] do %>
              <h6><strong><%= SiteSetting.value("subheader-help-find-installer") %></strong></h6>
              <div class="space-after"><%= SiteSetting.value("help-find-installer-description") %></div>
              <%= link_to SiteSetting.value("button-help-find-installer"), '#', class: "small radius button" %>
            <% end %>

          </div>

          <div class="large-4 columns">
            <div class="panel">
              <%= cache ["hef-content", Date.today] do %>
                <h6 class="subheader"><%= SiteSetting.value("hef-sidebar-title") %></h6>
                <div class="space-after"><%= SiteSetting.value("hef-description") %></div>
                <%= link_to "Learn More", SiteSetting.value("hef-link"), target: "_blank", class: "small radius button" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
