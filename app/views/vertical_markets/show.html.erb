<%= content_for :title do %><%= @vertical_market.name %><% end %>
<%= content_for :description do %>
  <%= t('vertical_market_page.meta_description', vertical_market: @vertical_market.name) %>
<% end %>
<% if @vertical_market.children.where(live: true).size > 0 %>
  <% # This will be the view for Enterprise or Entertainment top level %>
  <%= render "parent_category_container", vertical_market: @vertical_market %>

<% else %>
  <% # This will be the view for each child vertical market of Enterprise or Entertainment %>
  <%= render "child_vertical_market_container", vertical_market: @vertical_market %>

<% end %>
