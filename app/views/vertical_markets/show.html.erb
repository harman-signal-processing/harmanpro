<%= content_for :title do %><%= @vertical_market.name %><% end %>
<%= content_for :description do %>
  <%= t('vertical_market_page.meta_description', vertical_market: @vertical_market.name) %>
<% end %>

<% if @vertical_market.children.where(live: true).length > 0 %>
  <div class="container main-container parent-category-container" data-background="<%= @vertical_market.background.url %>">
    <div class="bubble" id="bubble-1"></div>
    <div class="bubble" id="bubble-2-removed"></div>
    <div class="bubble" id="bubble-3"></div>

    <div class="row">
      <div class="medium-5 medium-offset-1 columns">
        <div class="panel">
          <h2><%= @vertical_market.name %></h2>
          <h5 class="subheader"><%= @vertical_market.headline %></h5>
          <%= raw textilize @vertical_market.description %>
        </div>
        <p>&nbsp;</p>
      </div>
    </div>

    <div class="row">
      <div class="medium-10 medium-offset-1 columns">
        <h2 class="white"><%= t("explore") %> <%= t("vertical_market_solutions", vertical_market_name: @vertical_market.name) %></h2>
        <br/>
        <ul class="large-block-grid-5 medium-block-grid-3 small-block-grid-2 %>">
          <% @vertical_market.children_or_reference_systems.each do |vm| %>
            <li>
            <%= link_to vm, class: "vertical-market-icon" do %>
              <% if vm.banner.present? || ENV['show_placeholders'] == "true" %>
                <%= image_tag vm.banner.url(:small) %>
              <% end %>
              <div class="overlay">
                <h5><%= vm.name %></h5>
                <span class="description"><%= vm.headline %></span>
              </div>
            <% end %>
            </li>
          <% end %>
        </ul>
        <p>&nbsp;</p>
      </div>
    </div>

    <div class="row" data-equalizer="info-panels">
      <div class="medium-6 medium-offset-1 small-12 columns">
        <div class="info-panel panel text-center" data-equalizer-watch="info-panels">
          <%= render "find_installer" %>
        </div>
      </div>
      <div class="medium-4 small-12 columns end">
        <% if @vertical_market.show_hef? %>
          <% if @vertical_market.hef_banner.present? %>

            <%= link_to SiteSetting.value("hef-link") do %>
              <%= image_tag @vertical_market.hef_banner.url, width: 750, height: 70, alt: SiteSetting.value("hef-description"), style: 'margin-bottom: 1.42857rem;' %>
            <% end %>

          <% else %>
            <div class="info-panel panel text-center" data-equalizer-watch="info-panels">
              <h4><%= SiteSetting.value("hef-sidebar-title") %></h4>
              <div class="space-after">
                <%= raw textilize SiteSetting.value("hef-description") %>
              </div>
              <%= link_to t('learn_more'),
                SiteSetting.value("hef-link"),
                target: (SiteSetting.value("hef-link").to_s.match(/^http/) ? "_blank" : ""),
                class: "small radius button" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>

<% else %>

  <div ng-controller="VerticalMarketCtrl" ng-cloak
    locale="<%= I18n.locale %>"
    vmid="<%= @vertical_market.to_param %>">

    <div class="bumped-up">

      <div data-system-id="{{ currentSystem()['id'] }}"></div>
      <div class="banner-container vertical-market">
        <% if @vertical_market.reference_systems.count > 0 %>
          <img ng-src="{{ system['banner_url'] }}" img-preload />
        <% else %>
          <%= image_tag(@vertical_market.banner.url(:large)) %>
        <% end %>
      </div>

      <div class="row">
        <div class="large-5 large-offset-2 medium-6 medium-offset-2 small-12 columns">
          <div class="slider-container panel">
            <a name="learn"></a>
            <h1 data-magellan-destination="learn"><%= @vertical_market.name %></h1>

            <% if @vertical_market.reference_systems.count > 1 %>
              <div ng-show="systems.length > 1">
                <input slider
                  ng-model="slider_pos"
                  options="{
                    from: 1,
                    to: systems.length,
                    step: 1,
                    smooth: true,
                    scale: system_labels,
                  }"
                />
              </div>
            <% end %>

          </div>
        </div>
      </div>

    </div>

    <%= render "shared/learn_plan_buy_nav.html.erb" %>

    <div class="container">
      <div class="row">
        <div class="large-8 large-offset-2 columns">

          <div class="reference_system_container"
            ng-show="systems.length > 0">

            <h2>{{ system['headline'] }}</h2>
            <div ng-bind-html="getHtml(system['description'])"></div>
            <% if @vertical_market.all_diagrams_present? || ENV['show_placeholders'] == "true" %>
              <div class="system-diagram-container">
                <%= render "reference_systems/system_diagram_popups" %>

                <img ng-src="{{ system['system_diagram_url'] }}" img-preload/>
              </div>
            <% else %>
              <hr/>
            <% end %>
          </div>

          <noscript>
            <h5 class="subheader"><%= t('vertical_market_page.explore_examples') %>:</h5>
            <ul>
              <%= @vertical_market.featured_reference_systems.each do |reference_system| %>
                <li><%= link_to reference_system.name, [@vertical_market, reference_system] %></li>
              <% end %>
            </ul>
          </noscript>

          <%= render "learn", vertical_market: @vertical_market %>

        </div>
      </div>
    </div>

  </div>

  <%= render "plan", vertical_market: @vertical_market %>
  <%= render "buy", vertical_market: @vertical_market %>

<% end %>
