<div class="large-4 columns">
  <%= cache ["resource-library-content", vertical_market, Date.today, I18n.locale] do %>
    <h6 class="subheader underlined"><%= SiteSetting.value("resource-library-sidebar-title") %></h6>

    <!-- placeholder for resource library -->
    <% (1..3).each do |n| %>
      <div class="row" style="margin-bottom: 14px;">
        <div class="large-4 small-5 columns">
          <div class="text-center" style="background: #CCC; height: 64px; width: 64px; padding-top: 16px;">Img<%= n %></div>
        </div>
        <div class="large-8 small-7 columns">
          <h5 style="margin-top: 0; padding-top: 0; margin-bottom: 2px;">Resource title</h5>
          resource description text
        </div>
      </div>
    <% end %>

  <% end %>
</div>
