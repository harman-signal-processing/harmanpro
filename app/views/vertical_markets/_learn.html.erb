
<div class="row">

  <div class="large-12 columns">
    <h3><%= vertical_market.headline %></h3>
    <div class="description">
      <%=raw vertical_market.description %>
    </div>

    <% if vertical_market.featured_case_studies.size > 0 %>
      <div class="case_studies">
        <ul class="small-block-grid-1 large-block-grid-3 medium-block-grid-3">
          <% vertical_market.featured_case_studies.each do |case_study| %>
            <li>
              <%= render "shared/case_study_summary", case_study: case_study %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%#= render 'resource_library_panel', vertical_market: vertical_market %>
</div>

<% if vertical_market.extra_content.present? %>
  <div class="row">
    <div class="medium-12 columns">
      <%= raw vertical_market.extra_content %>
    </div>
  </div>
<% end %>

