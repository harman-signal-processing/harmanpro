<h1>Emails</h1>

<ul class="button-group round">
	<li><%= link_to 'Contact List', contact_info_admin_contacts_path, class: "small button round" %>	</li>
	<li><%= link_to 'New Email', new_contact_info_admin_email_path, class: "small success button" %></li>
</ul>

<table class="data">
  <tr>
  	<th></th>
    <th>Label</th>
    <th>Email</th>
  </tr>

<% @emails.each do |email| %>
  <tr style="vertical-align:text-bottom;">
    <td><%= link_to 'Edit', edit_contact_info_admin_email_path(email), class: "small round button" %></td>
    <td><%= email.label %></td>
    <td><%= email.email %></td>
  </tr>
<% end %>
</table>