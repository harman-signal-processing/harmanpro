(function(){
	var $contacts_dropdown = $('#contact_info_contact_website_contact_info_contact_id');

	// clear the contact list before we rebuild it
	$contacts_dropdown.empty();
	
	// rebuild contact dropdown list
	$contacts_dropdown.append($("<option></option>"));		
	<% ContactInfo::Contact.not_associated_with_this_website(@contact_website.website).each do |contact| %>
		$contacts_dropdown.append($("<option value='<%=contact.id%>'><%=contact.name%> - <%=escape_javascript(contact.title)%></option>"));
	<% end %>
	
	// let chosen know the phone dropdown list has been updated
	$contacts_dropdown.trigger('chosen:updated');
})();