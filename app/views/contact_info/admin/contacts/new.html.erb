<%= simple_form_for @contact, url: contact_info_admin_contacts_path do |f| %>
<%= f.input :name %>
<%= f.input :title %>
<%= f.hidden_field :email_id, value: "#{params[:contact][:email_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :phone_id, value: "#{params[:contact][:phone_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :website_id, value: "#{params[:contact][:website_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :team_group_id, value: "#{params[:contact][:team_group_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :territory_id, value: "#{params[:contact][:territory_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :distributor_id, value: "#{params[:contact][:distributor_id]}" unless params[:contact].nil? %>
<%= f.hidden_field :location_id, value: "#{params[:contact][:location_id]}" unless params[:contact].nil? %>

<%= f.submit class: "radius button" %>
<% end %>