<%= simple_form_for(@service_center) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :contact_name, label: "Your Name" %>
    <%= f.input :email %>
    <%= f.input :name, label: "Business Name" %>
    <%= f.input :address %>
    <div class="row">
      <div class="large-6 medium-6 columns">
        <%= f.input :city %>
      </div>
      <div class="large-3 medium-3 columns">
        <%= f.input :state %>
      </div>
      <div class="large-3 medium-3 columns">
        <%= f.input :zip %>
      </div>
    </div>
    <div class="row">
      <div class="large-6 medium-6 columns">
        <%= f.input :phone %>
      </div>
      <div class="large-6 medium-6 columns">
        <% unless @service_center.new_record? %>
          <%= f.input :fax %>
        <% end %>
      </div>
    </div>
    <% unless @service_center.new_record? %>
    <div class="row">
      <div class="large-6 medium-6 columns">
          <%= f.input :website %>
      </div>
      <div class="large-6 medium-6 columns">
        <%= f.input :account_number %>
      </div>
    </div>
    <% end %>
    <% if @service_center.new_record? %>
      <%= f.input :willingness,
        as: :boolean,
        label: "I am willing and able to service all Harman Professional Brands at my location." %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Register", class: "medium radius button" %>
  </div>
<% end %>
