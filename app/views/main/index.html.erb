<script type="text/ng-template" id="venue_popup">
  <div class="triangle"></div>
  <div class="ns-popover-tooltip">
    <div class="row collapse">
      <div class="large-11 small-11 columns">
        <h5 class="subheader">{{ venue.name }}</h5>
      </div>
      <div class="large-1 small-1 columns text-right">
        <a ng-click="hidePopover()"><%= image_tag('close.png', alt: "X") %></a>
      </div>
    </div>
    <p>{{ venue.description }}</p>
  </div>
</script>

<div ng-controller="HomepageBannerCtrl as banner">
  <div class="bumped-up space-after hide-for-medium-down">
    <div class="banner-container text-center">
      <div class="text-center homepage-banner">
        <%= image_tag "HarmanSkylineImage.jpg" %>
        <h1><%=raw format_headline SiteSetting.value("homepage-main-headline") %></h1>
        <img src="<%= asset_path('H-Pointer.png') %>" alt="[H]" class="help-icon" ns-popover
          ng-repeat="venue in venues"
          ptid="{{ venue.id }}"
          ng-style="{'left': 'venue.left', 'top': 'venue.top'}"
          ns-popover-modal="venue-popups"
          ns-popover-theme="ns-popover-tooltip-theme"
          ns-popover-timeout="7"/>
      </div>
    </div>
  </div>
</div>

<div class="container main-container">
  <div class="row">
    <div class="large-8 large-offset-2 columns text-center">
      <h2 class="space-after"><%=raw format_headline SiteSetting.value("homepage-vertical-markets-headline") %></h2>

        <% @vertical_markets.each do |vm| %>
          <%= link_to vm, class: "vertical-market-icon" do %>
            <%= image_tag vm.banner.url(:small) %>
            <h5><%= vm.name %></h5>
          <% end %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <hr/>
  </div>

  <div class="row">
    <div class="large-10 large-offset-1 columns">

      <h2 class="text-center space-after"><%=raw format_headline SiteSetting.value("homepage-brands-headline") %></h2>
      <div class="text-center">
        <% all_brands.each do |brand| %>
          <%= link_to brand, class: 'brand-circle' do %>
            <% if brand.white_logo.present? %>
              <%= image_tag brand.white_logo.url(:circle), alt: brand.name %>
            <% else %>
              <%= brand.name %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

