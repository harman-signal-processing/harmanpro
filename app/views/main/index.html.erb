<div ng-controller="HomeBannerCtrl as banner">
  <div class="bumped-up space-after hide-for-medium-down">
    <div class="banner-container text-center">
      <div class="text-center homepage-banner">
        <%= image_tag "HarmanSkylineImage.png" %>
        <h1><%= SiteSetting.value("homepage-main-headline") %></h1>
      </div>
    </div>
  </div>
</div>

<div class="container main-container">
  <div class="row">
    <div class="large-8 large-offset-2 columns">
      <h2 class="text-center space-after"><%= SiteSetting.value("homepage-vertical-markets-headline") %></h2>

      <ul class="small-block-grid-1 medium-block-grid-<%= @vertical_markets.length %> large-block-grid-<%= @vertical_markets.length %>">
        <% @vertical_markets.each do |vm| %>
          <li><div class="panel">
            <h5 class="subheader text-center">
              <%= link_to vm.name, vm %>
            </h5>
            </div>
          </li>
        <% end %>
      </ul>

      <hr/>

      <h2 class="text-center space-after"><%= SiteSetting.value("homepage-brands-headline") %></h2>
      <div class="text-center">
        <% all_brands.each do |brand| %>
          <%= link_to brand, class: 'circle' do %>
            <% if brand.white_logo.present? %>
              <%= image_tag brand.white_logo.url(:circle), alt: brand.name %>
            <% else %>
              <%= brand.name %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

