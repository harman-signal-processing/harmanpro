<%= link_to(new_product.more_info || new_product.press_release || new_products_path, target: "_blank") do %>
  <div>
    <%= image_tag new_product.image.url(:medium), alt: new_product.name, lazy: false %>
  </div>
  <div class="title-panel" data-equalizer-watch="new-product-text">
    <%=raw new_product.content %>
  </div>
  
  Learn More
  <%= fa_icon 'long-arrow-alt-right', "aria-hidden": true %>
<% end %>

