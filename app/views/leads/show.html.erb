<h3 class="text-center">Lead Information</h3>

<div class="row">
  <div class="small-12 medium-6 medium-offset-3 columns">
    <p class="text-center">
      <strong><%= mail_to(@lead.Email, @lead.Email) %></strong>
    </p>
    <table style="width: 100%">
      <% @lead.columns.each do |key,val| %>
        <% if val.present? %>
          <tr>
            <td><strong><%= key.to_s.gsub(/^\d*/, '').titleize %></strong></td>
            <td><%= val %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
