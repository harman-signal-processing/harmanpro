<div class="case-study-panel case-study" data-equalizer-watch="case_study_panels">
  <% if case_study.banner.present? || ENV['show_placeholders'] == "true" %>
    <div class="img_container">
      <%= link_to(
        image_tag(case_study.banner.url(:medium)),
        [case_study.vertical_market, case_study]
      ) %>
    </div>
  <% end %>
  <h5>
    <%= link_to case_study.headline, [case_study.vertical_market, case_study]  %>
  </h5>
  <div class="cs-descr"><%= raw case_study.description %></div>
  <%#= link_to t('more'), [case_study.vertical_market, case_study], class: "tiny radius button" %>
</div>
