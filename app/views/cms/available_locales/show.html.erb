<div class="large-12 small-12 columns">
  <%= render 'cms/available_locales/side_nav' %>

  <div class="medium-7 small-12 columns text-center">
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&lt;-- Choose an item in the menu to translate</p>
    <p><i>or</i></p>
    <p><%= link_to "View the #{ @available_locale.name} site -->", root_path(locale: @available_locale.key), target: "_blank" %></p>
  </div>

  <div class="medium-3 small-12 columns">
    <div class="panel">

      <h5>Note:</h5>

      <% if @available_locale.name.match(/\-/) %>
        <p>Any missing content for this locale is automatically
        populated with its parent locale's content. If the parent
        is missing the content, then the site's default content
        is loaded.</p>
      <% else %>
        <p>Any missing content for this locale is automatically
        populated with content from the site's default locale.</p>
      <% end %>
    </div>
  </div>
</div>
