<div class="large-12 small-12 columns">
  <%= render 'cms/available_locales/side_nav' %>

  <div class="medium-8 small-12 columns">
    <h5 class="text-center">Edit Artist</h5>
    <div class="callout panel">
      <%= render 'cms/available_locales/artists/form' %>
    </div>
  </div>

  <div class="large-2 medium-2 columns">
    <div class="text-right">
      <%= link_to [:cms, @available_locale, @artist],
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "tiny alert button radius" do %>
        <%= fa_icon 'trash' %>
        Delete Article
      <% end %>
    </div>
      <hr/>
    <p>The URL for this artist has been generated
      based on the artist name. If you change the name,
      you'll see the new URL after editing the artist.</p>
      <p>The current URL for this artist is:</p>
      <p><%= link_to artist_url(@artist, locale: @artist.locale.key) do %>
        <%= artist_url(@artist, locale: @artist.locale.key) %>
      <% end %>
    </p>
  </div>
</div>
