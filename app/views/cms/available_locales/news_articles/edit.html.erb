<div class="large-12 small-12 columns">
  <%= render 'cms/available_locales/side_nav' %>

  <div class="medium-8 small-12 columns">
    <h5 class="text-center">Edit Article</h5>
    <div class="callout panel">
      <%= render 'cms/available_locales/news_articles/form' %>
    </div>
  </div>

  <div class="large-2 medium-2 columns">
    <div class="text-right">
      <%= link_to [:cms, @available_locale, @news_article],
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "tiny alert button radius" do %>
        <%= fa_icon 'trash' %>
        Delete Article
      <% end %>
    </div>
      <hr/>
    <p>The URL for this article has been generated
      based on the title. If you change the title of the article,
      you'll see the URL
      after editing the article.</p>
      <p>The current URL for this article is:</p>
      <p><%= link_to news_article_url(@news_article, locale: @news_article.locale.key) do %>
        <%= news_article_url(@news_article, locale: @news_article.locale.key) %>
      <% end %>
    </p>
  </div>
</div>
