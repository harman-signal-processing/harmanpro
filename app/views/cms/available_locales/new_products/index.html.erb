<div class="large-12 small-12 columns">
  <%= render 'cms/available_locales/side_nav' %>

  <div class="medium-7 small-12 columns">
    <h3>Choose a product:</h3>
    <ul>
      <% @new_products.order(updated_at: :asc).each do |new_product| %>
        <li class="<%= 'needs-translation' if new_product.needs_translation?(@available_locale.key) %>">
          <%= link_to new_product.name, edit_cms_available_locale_new_product_path(@available_locale, new_product) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="medium-3 small-12 columns">
    <div class="panel">
      <h6>What is it?</h6>
      <p>A <i>New</i> Product appears on the "New Products"
      Page. It may represent an actual product or a software
      release or something else.</p>
    </div>
  </div>
</div>
