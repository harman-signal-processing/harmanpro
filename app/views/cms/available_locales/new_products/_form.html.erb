<%= simple_form_for [:cms, @available_locale, @new_product] do |f| %>
  <%= render 'cms/available_locales/form_header', f: f %>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :name %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @new_product.name %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :content, as: :text, input_html: { rows: 3 } %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @new_product.content %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :more_info %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @new_product.more_info %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :press_release %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @new_product.press_release %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns text-center">
      <hr/>
      <%= f.submit 'Save Changes', class: 'medium button' %>
    </div>
  </div>

<% end %>
