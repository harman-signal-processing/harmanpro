<%= simple_form_for [:cms, @available_locale, @vertical_market] do |f| %>
  <%= render 'cms/available_locales/form_header', f: f %>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :name %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @vertical_market.name %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :headline %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @vertical_market.headline %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :description, as: :text, input_html: { rows: 15 } %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @vertical_market.description %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :extra_content, as: :text, input_html: { rows: 15 } %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw textilize @vertical_market.extra_content %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 small-12 columns">
      <%= f.input :lead_form_content, as: :text, input_html: { rows: 15 } %>
    </div>
    <div class="medium-6 small-12 columns">
      <br/>
      <% Globalize.with_locale(I18n.default_locale) do %>
        <%= raw @vertical_market.lead_form_content %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns text-center">
      <hr/>
      <%= f.submit 'Save Changes', class: 'medium button' %>
    </div>
  </div>

<% end %>
