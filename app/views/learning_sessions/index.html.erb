
<%=raw(@page_content)%>

<% if @events.count > 0 %>
  <% @events.each do |event| %>
    <div class="row" data-equalizer="blurbs" data-equalizer-mq="medium-up">
      <div class="medium-12 small-12 columns">
        <div class="panel" data-equalizer-watch="blurbs">
          <div align="center">
            <h4 class="classtitle"
                style="font-weight: bold; text-align: center; color: #00609c; text-transform: uppercase;"><%=event.title%></h4>
            <p><strong><%=event.subtitle%></strong></p>
            <p><%=raw(event.description)%></p>

            <% event.learning_session_event_sessions.each do |session| %>
              <p><strong><%=session.title%></strong>
              <br /><%=session.session_date.strftime "%A, %B %d, %Y"%> â€” <%=session.session_times%></p>
              <% if !session.register_link.empty?%>
                <a class="button large " style="text-align: center; display: inline-block;" href="<%=session.register_link%>">Register Now</a>
              <% end %>

            <% end %> <%# event.learning_session_event_sessions.each do |session| %>

          </div> <!-- <div align="center"> -->
        </div> <!-- <div class="panel" data-equalizer-watch="blurbs"> -->
      </div> <!-- <div class="medium-12 small-12 columns"> -->
    </div>  <!-- <div class="row" data-equalizer="blurbs" data-equalizer-mq="medium-up"> -->
  <% end %>  <%# @events.each do |event| %>
<% end %>  <%# if @events.count > 0 %>

<% if @webinars_link.present? %>
  <div class="row" data-equalizer="blurbs" data-equalizer-mq="medium-up">
      <div class="medium-12 small-12 columns">
          <div class="panel" data-equalizer-watch="blurbs">
              <div align="center">
                  <h1 style="margin: 0;"><a class="button large "
                          style="text-align: center; margin: 0; font-weight: bold;"
                          href="<%=@webinars_link%>" target="_blank" rel="noopener">VIEW
                          RECORDED LEARNING SESSIONS</a></h1>
              </div>
          </div>
      </div>
  </div>
<% end %>  <%# if @webinars_link.present? %>

