<% called_from ||= 'location' %>
<li id="location_supported_brand_<%= association.id %>">
	<% if (called_from == 'supported_brand') %><span class="handle"><%= image_tag("icons/drag_handle.gif") %></span><% end %>

	<% if (called_from == 'location') %> 
		<%#= link_to("#{association.brand.name}", edit_location_info_admin_brand_path(association.brand)) %>
		<%= association.brand.name %>
	<%else%>
		<%=link_to("#{association.location.name}", edit_location_info_admin_location_path(association.location))%> <span style="font-size: x-small"> - <%="#{association.location.city}" %></span> 
	<%end%>

	<%= link_to(image_tag("icons/trash.gif"), 
			location_info_admin_location_supported_brand_path(association, called_from: called_from), 
			confirm: "Are you sure? (This won't delete the supported_brand --it will only remove the association.)", 
			remote: true,
			method: :delete) %>
</li>