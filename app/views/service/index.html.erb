<%= content_for :title do %><%= t('service_page.title') %><% end %>
<%= content_for :description do %><%= t('service_page.meta_description') %><% end %>

<%= render 'shared/service_subnav' %>

<div class="container main-container">
  <div class="row">

    <div class="large-8 medium-7 columns">
      <div class="service-banner"> </div>
      <br/>
      <div class="row" data-equalizer="blurbs">
        <div class="large-4 medium-4 small-4 columns">
          <h5><%= SiteSetting.value('service-page-register-your-products-subheader') %></h5>
          <div data-equalizer-watch="blurbs">
            <p><%= SiteSetting.value('service-page-register-your-products-blurb') %></p>
          </div>
            <br/>
          <%= link_to t('service_page.links.register_now'), ENV['warranty_registration_url'], target: "_blank", class: "small radius button" %>
        </div>
        <div class="large-4 medium-4 small-4 columns">
          <h5><%= SiteSetting.value('service-page-warranty-repair-subheader') %></h5>
          <div data-equalizer-watch="blurbs">
            <p><%= SiteSetting.value('service-page-warranty-repair-blurb') %></p>
          </div>
            <br/>
          <%= link_to t('service_page.links.start_your_repair'), ENV['warranty_repair_url'], target: "_blank", class: "small radius button" %>
        </div>
        <div class="large-4 medium-4 small-4 columns">
          <h5><%= SiteSetting.value('service-page-out-of-warranty-subheader') %></h5>
          <div data-equalizer-watch="blurbs">
            <p><%= SiteSetting.value('service-page-out-of-warranty-blurb') %></p>
          </div>
            <br/>
          <%= link_to t('service_page.links.get_started'), ENV['warranty_repair_url'], target: "_blank", class: "small radius button" %>
        </div>
      </div>
    </div>

    <div class="large-4 medium-5 columns">
      <div class="callout panel">
        <h3><%= SiteSetting.value('service-page-service-center-login-subheader') %></h3>
        <p><%= SiteSetting.value('service-page-service-center-login-blurb') %></p>
        <%= link_to t('service_page.links.access_now'), service_center_login_path, class: "small radius button" %>

        <hr/>
        <h3><%= SiteSetting.value('service-page-become-a-service-center-subheader') %></h3>
        <p><%= SiteSetting.value('service-page-become-a-service-center-blurb') %></p>
        <%= link_to t('service_page.links.apply_now'), new_service_center_path, class: "small radius button" %>

        <hr/>
        <h3><%= SiteSetting.value('service-page-harman-pro-dealer-portal-subheader') %></h3>
        <p><%= SiteSetting.value('service-page-harman-pro-dealer-portal-blurb') %></p>
        <%= link_to t('service_page.links.order_now'), ENV['dealer_portal_url'], class: "small radius button" %>
      </div>
    </div>

  </div>
</div>
