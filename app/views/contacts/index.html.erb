<h1 style="margin-bottom:20px;">Contacts</h1>


<div class="row">
    <div class="large-12 large-offset-0 medium-8 medium-offset-2 columns" data-equalizer="contactbox">
        <ul class="large-block-grid-4 medium-block-grid-3 small-block-grid-1">
        
            <% @contacts[:contacts].each do |contact|%>
            <li>
                <div class="panel" data-equalizer-watch="contactbox">
                    <em><%=contact["name"]%></em></br>
                    <%=contact["title"]%></br>
                    <i class="fa fa-envelope" aria-hidden="true"></i>&nbsp; <a href="mailto:<%=contact["email"]%>"><%=contact["email"]%></a></br>
                    <i class="fa fa-phone" aria-hidden="true"></i>&nbsp;<%=contact["phone1"]%></br>
                    <!--<b>Groups:</b> <%=([contact["group1"].to_s,contact["group2"].to_s,contact["group3"].to_s] - ["", nil]).join("</br>").html_safe%>                    -->
                </div>

            </li>
            <% end %>
        </ul><!-- <ul class="large-block-grid-5 medium-block-grid-3 small-block-grid-1"> -->
    </div><!-- <div class="large-12 large-offset-0 medium-8 medium-offset-2 columns" data-equalizer="contact-box">  -->
</div><!-- <div class="row"> -->

