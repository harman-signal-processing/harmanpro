(function(){
	var $locations_dropdown = $('#distributor_info_distributor_location_location_info_location_id');

	// clear the location list before we rebuild it
	$locations_dropdown.empty();
	
	// rebuild location dropdown list
	$locations_dropdown.append($("<option></option>"));		
	<% LocationInfo::Location.not_associated_with_this_distributor(@distributor_location.distributor).each do |location| %>
		$locations_dropdown.append($("<option value='<%=location.id%>'><%=location.name%></option>"));
	<% end %>
	
	// let chosen know the phone dropdown list has been updated
	$locations_dropdown.trigger('chosen:updated');
})();