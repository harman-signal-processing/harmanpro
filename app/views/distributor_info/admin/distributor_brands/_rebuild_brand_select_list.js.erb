(function(){
	var $brands_dropdown = $('#distributor_info_distributor_brand_brand_id');

	// clear the brand list before we rebuild it
	$brands_dropdown.empty();
	
	// rebuild brand dropdown list
	$brands_dropdown.append($("<option></option>"));		
	<% Brand.not_associated_with_this_distributor(@distributor_brand.distributor).each do |brand| %>
		$brands_dropdown.append($("<option value='<%=brand.id%>'><%=brand.name%></option>"));
	<% end %>
	
	// let chosen know the phone dropdown list has been updated
	$brands_dropdown.trigger('chosen:updated');
})();